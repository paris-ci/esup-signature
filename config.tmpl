{{- /* Convert environment variables to YAML */ -}}
{{- $config := dict -}}
{{- range $key, $value := .Env -}}
  {{- if strings.Contains $key "__" -}}
    {{- $parts := strings.Split $key "__" -}}
    {{- $prefix := strings.ToLower (index $parts 0) -}}
    {{- $rest := coll.Slice $parts 1 -}}
    {{- $yamlKey := printf "%s:%s" $prefix (strings.Join $rest ":") -}}
    {{- $_ := set $config $yamlKey $value -}}
  {{- end -}}
{{- end -}}

{{- /* Output the YAML */ -}}
{{- toYAML $config -}} 